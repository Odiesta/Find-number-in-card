<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="com.odiestas.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label fx:id="numberToSearch" text="Find number: "
           GridPane.rowIndex="0" GridPane.columnIndex="0" >

        <font>
            <Font size="20" name="Times New Roman bold" />
        </font>
    </Label>

    <FlowPane fx:id="cardsArea" hgap="10" vgap="4" style="-fx-background-color: #DAE6F3"
        GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="250" prefWidth="400">

        <padding>
            <Insets topRightBottomLeft="15" />
        </padding>
    </FlowPane>
    <Label fx:id="cardsClicked" text="Counter: " GridPane.rowIndex="2"
            GridPane.columnIndex="0">

        <font>
            <Font size="20" name="Times New Roman bold" />
        </font>
    </Label>
    <Button text="Start Game" onAction="#startGame" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>